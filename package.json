{
  "name": "@aspect/coverage-tools",
  "version": "2.0.0",
  "description": "增量覆盖率检测工具，支持 Vue、React、小程序等多种项目类型",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./presets": {
      "import": "./dist/presets/index.js",
      "require": "./dist/presets/index.cjs",
      "types": "./dist/presets/index.d.ts"
    },
    "./reporters": {
      "import": "./dist/reporters/index.js",
      "require": "./dist/reporters/index.cjs",
      "types": "./dist/reporters/index.d.ts"
    },
    "./errors": {
      "import": "./dist/errors/index.js",
      "require": "./dist/errors/index.cjs",
      "types": "./dist/errors/index.d.ts"
    },
    "./ci-adapter": {
      "import": "./dist/ci-adapter/index.js",
      "require": "./dist/ci-adapter/index.cjs",
      "types": "./dist/ci-adapter/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "coverage-check": "./bin/cli.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "rslib build",
    "dev": "rslib build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run test && npm run build"
  },
  "keywords": [
    "coverage",
    "incremental",
    "testing",
    "lcov",
    "ci",
    "vue",
    "react",
    "miniprogram",
    "github-actions",
    "cnb"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@rslib/core": "^0.3.1",
    "@types/node": "^20.17.12",
    "@vitest/coverage-v8": "^2.1.0",
    "typescript": "^5.7.3",
    "vitest": "^2.1.0"
  },
  "peerDependencies": {},
  "dependencies": {}
}
